@model EmployeeManagement.Models.AddEmployeeViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Add</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.min.css" rel="stylesheet" />
    <link href="~/Content/Site.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-xs-4">
                <h1>Add Employee</h1>
                @Html.ValidationSummary() <!--This will allow error messages-->
                <!--by using this using statement, the form will close, other wise you would need to add a closing statement at the end-->
                @using (Html.BeginForm("Add", "Employees", FormMethod.Post))
            {
                    <div class="form-group">
                        <label>First Name</label>
                        <!--use m since we are using a model to remind us of this-->
                        @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Last Name</label>
                        @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Phone</label>
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control" })
                    </div>
                    <div class="form-group">
                        <label>Department</label>
                        @Html.DropDownListFor(m => m.DepartmentId, Model.Departments, new { @class = "form-control" })
                    </div>
                   <!--On cancel, sending back to the list page-->
                     @Html.ActionLink("Cancel", "List", "Employees", null, new { @class = "btn btn-default" })
                    <button class="btn btn-primary">Save</button>
                }
            </div>

        </div> 
    </div>
    <script src="~/Scripts/jquery-3.1.0.slim.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>
