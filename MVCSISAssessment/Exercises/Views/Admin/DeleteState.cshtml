
@model Exercises.Models.Data.State

@{
    ViewBag.Title = "DeleteState";
}

<div class="row">
    <div class="col-xs-12">
        <h3>Delete State</h3>
        @Html.ActionLink("Return to List", "States", "Admin")
    </div>
</div>
<div class="row">
    <div class="col-xs-12">
        @using (Html.BeginForm())
        {
            @Html.HiddenFor(m => m.StateID)
            <p>Are you sure that you wish to delete the state @Html.DisplayFor(m => m.StateName)?</p>
            <button type="submit" class="btn btn-sm btn-danger">Delete</button>
        }
    </div>
</div>     
